{
   "$schema": "https://vicinae.com/schemas/config.json",
   "pop_to_root_on_close": true,
   "theme": {
      "light": {
         "name": "catppuccin-latte",
         "icon_theme": "Hicolor"
      },
      "dark": {
         "name": "tokyo-night",
         "icon_theme": "Hicolor"
      }
   },
   "launcher_window": {
      "opacity": 0.95
   },
   "keybinds": {
      "toggle-action-panel": "super+K"
   },
   "favorites": [
      "clipboard:history",
      "core:search-emojis",
      "applications:com.mattermost.Desktop",
      "applications:org.telegram"
   ],
   "providers": {
      "applications": {
         "preferences": {
            "paths": [
               "/home/darkawower/.local/share/applications",
               "/nix/store/7swls12w7nxpnqwgyc4my85l9jw0s51x-vicinae-0.18.3/share/applications",
               "/nix/store/zcw1bhk79g80hs9f2l5zsb5w1xsb4y6c-cups-2.4.16/share/applications",
               "/var/lib/flatpak/exports/share/applications",
               "/usr/local/share/applications",
               "/usr/share/applications",
               "/home/darkawower/.nix-profile/share/applications",
               "/home/darkawower/.config/scripts",
               "/home/darkawower/.config/vicinae"
            ]
         },
         "entrypoints": {
            "org.gnome.Ptyxis": {
               "enabled": false
            }
         }
      },
      "clipboard": {
         "entrypoints": {
            "history": {
               "alias": "cp"
            }
         }
      },
      "core": {
         "entrypoints": {
