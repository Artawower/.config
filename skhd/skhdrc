:: default : PATH=/opt/homebrew/bin:$PATH

# Navigation
# alt - h : /opt/homebrew/bin/yabai -m window --focus west
# alt - j : /opt/homebrew/bin/yabai -m window --focus south
# alt - k : /opt/homebrew/bin/yabai -m window --focus north
# alt - l : /opt/homebrew/bin/yabai -m window --focus east

alt - h : /opt/homebrew/bin/yabai -m window --focus west || /opt/homebrew/bin/yabai -m display --focus west
alt - j : /opt/homebrew/bin/yabai -m window --focus south || /opt/homebrew/bin/yabai -m display --focus south
alt - k : /opt/homebrew/bin/yabai -m window --focus north || /opt/homebrew/bin/yabai -m display --focus north
alt - l : /opt/homebrew/bin/yabai -m window --focus east || /opt/homebrew/bin/yabai -m display --focus east
alt - a: alt - tab : $(/opt/homebrew/bin/yabai -m query --windows --space | jq -re "map(select(.\"has-focus\" == true)) | length != 0") = true ] && /opt/homebrew/bin/yabai -m window --focus "$(/opt/homebrew/bin/yabai -m query --windows --space | jq -re "[sort_by(.id, .frame) | reverse | .[] | select(.role == \"AXWindow\" and .subrole == \"AXStandardWindow\") | .id] | nth(index($(/opt/homebrew/bin/yabai -m query --windows --window | jq -re ".id")) - 1)")" ||  /opt/homebrew/bin/yabai -m window --focus "$(/opt/homebrew/bin/yabai -m query --spaces --space | jq -re ".windows[0]?")" &> /dev/null


# Moving windows
# shift + alt - h : /opt/homebrew/bin/yabai -m window --warp west
# shift + alt - j : /opt/homebrew/bin/yabai -m window --warp south
# shift + alt - k : /opt/homebrew/bin/yabai -m window --warp north
# shift + alt - l : /opt/homebrew/bin/yabai -m window --warp east

alt + shift - h : /opt/homebrew/bin/yabai -m window --swap west || $(/opt/homebrew/bin/yabai -m window --display west; /opt/homebrew/bin/yabai -m display --focus west)
alt + shift - j : /opt/homebrew/bin/yabai -m window --swap south || $(/opt/homebrew/bin/yabai -m window --display south; /opt/homebrew/bin/yabai -m display --focus south)
alt + shift - k : /opt/homebrew/bin/yabai -m window --swap north || $(/opt/homebrew/bin/yabai -m window --display north; /opt/homebrew/bin/yabai -m display --focus north)
alt + shift - l : /opt/homebrew/bin/yabai -m window --swap east || $(/opt/homebrew/bin/yabai -m window --display east; /opt/homebrew/bin/yabai -m display --focus east)

# Move focus container to workspace
shift + alt - m : /opt/homebrew/bin/yabai -m window --space last && /opt/homebrew/bin/yabai -m space --focus last
shift + alt - p : /opt/homebrew/bin/yabai -m window --space prev && /opt/homebrew/bin/yabai -m space --focus prev
shift + alt - n : /opt/homebrew/bin/yabai -m window --space next && /opt/homebrew/bin/yabai -m space --focus next
shift + alt - 1 : /opt/homebrew/bin/yabai -m window --space 1 && /opt/homebrew/bin/yabai -m space --focus 1
shift + alt - 2 : /opt/homebrew/bin/yabai -m window --space 2 && /opt/homebrew/bin/yabai -m space --focus 2
shift + alt - 3 : /opt/homebrew/bin/yabai -m window --space 3 && /opt/homebrew/bin/yabai -m space --focus 3
shift + alt - 4 : /opt/homebrew/bin/yabai -m window --space 4 && /opt/homebrew/bin/yabai -m space --focus 4
shift + alt - 5 : /opt/homebrew/bin/yabai -m window --space 5 && /opt/homebrew/bin/yabai -m space --focus 5
shift + alt - 6 : /opt/homebrew/bin/yabai -m window --space 6 && /opt/homebrew/bin/yabai -m space --focus 6
shift + alt - 7 : /opt/homebrew/bin/yabai -m window --space 7 && /opt/homebrew/bin/yabai -m space --focus 7
shift + alt - 8 : /opt/homebrew/bin/yabai -m window --space 8 && /opt/homebrew/bin/yabai -m space --focus 8
shift + alt - 9 : /opt/homebrew/bin/yabai -m window --space 9 && /opt/homebrew/bin/yabai -m space --focus 9
shift + alt - 0 : /opt/homebrew/bin/yabai -m window --space 10 && /opt/homebrew/bin/yabai -m space --focus 10
shift + alt - 0x1B : /opt/homebrew/bin/yabai -m window --space 11 && /opt/homebrew/bin/yabai -m space --focus 11
shift + alt - 0x18 : /opt/homebrew/bin/yabai -m window --space 12 && /opt/homebrew/bin/yabai -m space --focus 12


shift + alt - d : /opt/homebrew/bin/yabai -m window --space dev && /opt/homebrew/bin/yabai -m space --focus dev
shift + alt - w : /opt/homebrew/bin/yabai -m window --space www && /opt/homebrew/bin/yabai -m space --focus www
shift + alt - s : /opt/homebrew/bin/yabai -m window --space social && /opt/homebrew/bin/yabai -m space --focus social
shift + alt - i : /opt/homebrew/bin/yabai -m window --space thrash && /opt/homebrew/bin/yabai -m space --focus thrash
shift + alt - t : /opt/homebrew/bin/yabai -m window --space term && /opt/homebrew/bin/yabai -m space --focus term
# shift + alt - c : /opt/homebrew/bin/yabai -m window --space term && /opt/homebrew/bin/yabai -m space --focus term
shift + alt - t : /opt/homebrew/bin/yabai -m window --space term && /opt/homebrew/bin/yabai -m space --focus term
shift + alt - e : /opt/homebrew/bin/yabai -m window --space entertainment && /opt/homebrew/bin/yabai -m space --focus entertainment
shift + alt - o : /opt/homebrew/bin/yabai -m window --space other && /opt/homebrew/bin/yabai -m space --focus other


# Resize windows
lctrl + alt - h : \
    /opt/homebrew/bin/yabai -m window --resize left:-40:0 ; \
    /opt/homebrew/bin/yabai -m window --resize right:-40:0

lctrl + alt - j : \
    /opt/homebrew/bin/yabai -m window --resize bottom:0:40 ; \
    /opt/homebrew/bin/yabai -m window --resize top:0:40

lctrl + alt - k : \
    /opt/homebrew/bin/yabai -m window --resize top:0:-40 ; \
    /opt/homebrew/bin/yabai -m window --resize bottom:0:-40

lctrl + alt - l : \
    /opt/homebrew/bin/yabai -m window --resize right:40:0 ; \
    /opt/homebrew/bin/yabai -m window --resize left:40:0

# Float and center window
shift + alt - c : /opt/homebrew/bin/yabai -m window --toggle float;\
                  /opt/homebrew/bin/yabai -m window --grid 4:4:1:1:2:2

# Equalize size of windows
lctrl + alt - 0 : /opt/homebrew/bin/yabai -m space --balance

# Enable / Disable gaps in current workspace
lctrl + alt - g : /opt/homebrew/bin/yabai -m space --toggle padding; /opt/homebrew/bin/yabai -m space --toggle gap
# Enable / Disable borders in current workspace
lctrl + alt - b : /opt/homebrew/bin/yabai -m config window_border on
lctrl + alt + shift - b : /opt/homebrew/bin/yabai -m config window_border off
lctrl + alt + shift - t : /opt/homebrew/bin/yabai -m config top_padding 20
lctrl + alt + shift - g : /opt/homebrew/bin/yabai -m config top_padding 50


# Rotate windows clockwise and anticlockwise
alt - r         : /opt/homebrew/bin/yabai -m space --rotate 90
shift + alt - r : /opt/homebrew/bin/yabai -m space --rotate 270

# Rotate on X and Y Axis
shift + alt - x : /opt/homebrew/bin/yabai -m space --mirror x-axis
shift + alt - y : /opt/homebrew/bin/yabai -m space --mirror y-axis

# Set insertion point for focused container
shift + lctrl + alt - h : /opt/homebrew/bin/yabai -m window --insert west
shift + lctrl + alt - j : /opt/homebrew/bin/yabai -m window --insert south
shift + lctrl + alt - k : /opt/homebrew/bin/yabai -m window --insert north
shift + lctrl + alt - l : /opt/homebrew/bin/yabai -m window --insert east

# Float / Unfloat window
shift + alt - space : /opt/homebrew/bin/yabai -m window --toggle float

# Restart /Opt/Homebrew/Bin/Yabai
shift + lctrl + alt - r : 
    /usr/bin/env osascript <<< \
        "display notification \"Restarting /Opt/Homebrew/Bin/Yabai\" with title \"/Opt/Homebrew/Bin/Yabai\""; \
    /opt/homebrew/bin/yabai --stop-service; \
    /opt/homebrew/bin/yabai --start-service

# launchctl kickstart -k "gui/${UID}/homebrew.mxcl./opt/homebrew/bin/yabai"
# restart sketchybar
shift + lctrl + alt - s : 
    /usr/bin/env osascript <<< \
        "display notification \"Restarting Sketchybar\" with title \"Sketchybar\""; \
    launchctl kickstart -k "gui/${UID}/homebrew.mxcl.sketchybar"

# Restart skhd

shift + lctrl + alt - k : skhd --restart-service

# Zen mode
cmd + alt - l : /opt/homebrew/bin/yabai -m config window_opacity off

cmd + alt - o : /opt/homebrew/bin/yabai -m config window_opacity on



# Workspaces
lctrl + alt - c : /opt/homebrew/bin/yabai -m space --create

lctrl + alt - d : /opt/homebrew/bin/yabai -m space --destroy

# Make window native fullscreen
alt - f         : /opt/homebrew/bin/yabai -m window --toggle zoom-fullscreen
shift + alt - f : /opt/homebrew/bin/yabai -m window --toggle native-fullscreen

lctrl + alt - left : /opt/homebrew/bin/yabai -m space --focus prev || /opt/homebrew/bin/yabai -m space --focus last
lctrl + alt - right : /opt/homebrew/bin/yabai -m space --focus next || /opt/homebrew/bin/yabai -m space --focus first


alt - 1 : /opt/homebrew/bin/yabai -m space --focus 1
alt - 2 : /opt/homebrew/bin/yabai -m space --focus 2
alt - 3 : /opt/homebrew/bin/yabai -m space --focus 3
alt - 4 : /opt/homebrew/bin/yabai -m space --focus 4
alt - 5 : /opt/homebrew/bin/yabai -m space --focus 5
alt - 6 : /opt/homebrew/bin/yabai -m space --focus 6
alt - 7 : /opt/homebrew/bin/yabai -m space --focus 7
alt - 8 : /opt/homebrew/bin/yabai -m space --focus 8
alt - 9 : /opt/homebrew/bin/yabai -m space --focus 9
alt - 0 : /opt/homebrew/bin/yabai -m space --focus 10
alt - 0x1B : /opt/homebrew/bin/yabai -m space --focus 11
alt - 0x18 : /opt/homebrew/bin/yabai -m space --focus 12

# alt - m : /opt/homebrew/bin/yabai -m space --focus 1
alt - s : /opt/homebrew/bin/yabai -m space --focus social
alt - w : /opt/homebrew/bin/yabai -m space --focus www
# alt - d : /opt/homebrew/bin/yabai -m space --focus dev
alt - d : /opt/homebrew/bin/yabai -m space --focus dev
alt - i : /opt/homebrew/bin/yabai -m space --focus thrash
alt - t : /opt/homebrew/bin/yabai -m space --focus term
# alt - c : /opt/homebrew/bin/yabai -m space --focus term
alt - e : /opt/homebrew/bin/yabai -m space --focus entertainment
