# Applications
# alt - return : open -na alacritty.app
# cmd + alt - return : open -a alacritty.app
# 
# alt - return : open -na kitty.app

# alt - return : kitty -o allow_remote_control=yes --listen-on unix:/tmp/mykitty
alt - return : /opt/homebrew/bin/wezterm

cmd + alt - return : open -a kitty.app

# alt - a : open -na alacritty.app
# cmd + alt - a : open -a alacritty.app

cmd + alt - f : /opt/homebrew/bin/yabai -m space --focus 3;\
                open -a firefox.app;\
                /opt/homebrew/bin/yabai -m window --space 3 && /opt/homebrew/bin/yabai -m space --focus 3

cmd + alt - w : /opt/homebrew/bin/yabai -m space --focus 3;\
                open -na firefox.app;\
                /opt/homebrew/bin/yabai -m window --space 3 && /opt/homebrew/bin/yabai -m space --focus 3


cmd + alt - t : /opt/homebrew/bin/yabai -m space --focus 1;\
                open -a telegram.app

# cmd + shift + alt - s : /opt/homebrew/bin/yabai -m space --focus 1;\
#                 open -a skype.app

cmd + alt - e : /opt/homebrew/bin/yabai -m space --focus dev; \
               export $(dbus-launch) && emacs

cmd + alt + shift - r : open -na kitty --args "ranger"

cmd + alt - v : open -na kitty --args "nvim"

cmd + alt - m : open -na kitty --args "spt"

# Close window
cmd + alt - x : /opt/homebrew/bin/yabai -m window --close
alt - q : /opt/homebrew/bin/yabai -m window --close

# Focus window up/down in stack
cmd + ctrl - n : /opt/homebrew/bin/yabai -m window --focus stack.next
cmd + ctrl - p : /opt/homebrew/bin/yabai -m window --focus stack.prev

# Add the active window  to the window or stack to the {direction}
# Note that this only works when the active window does *not* already belong to a stack
# cmd + ctrl - left  : /opt/homebrew/bin/yabai -m window --stack prev
# cmd + ctrl - down  : /opt/homebrew/bin/yabai -m window --stack next
# cmd + ctrl - up    : /opt/homebrew/bin/yabai -m window --stack prev
# cmd + ctrl - right : /opt/homebrew/bin/yabai -m window --stack next

cmd + ctrl - left  : /opt/homebrew/bin/yabai -m window west --stack $(/opt/homebrew/bin/yabai -m query --windows --window | jq -r '.id')
cmd + ctrl - down  : /opt/homebrew/bin/yabai -m window south --stack $(/opt/homebrew/bin/yabai -m query --windows --window | jq -r '.id')
cmd + ctrl - up    : /opt/homebrew/bin/yabai -m window north --stack $(/opt/homebrew/bin/yabai -m query --windows --window | jq -r '.id')
cmd + ctrl - k    : /opt/homebrew/bin/yabai -m window north --stack $(/opt/homebrew/bin/yabai -m query --windows --window | jq -r '.id')
cmd + ctrl - j  : /opt/homebrew/bin/yabai -m window south --stack $(/opt/homebrew/bin/yabai -m query --windows --window | jq -r '.id')
cmd + ctrl - right : /opt/homebrew/bin/yabai -m window east --stack $(/opt/homebrew/bin/yabai -m query --windows --window | jq -r '.id')

cmd + ctrl + alt - s: /opt/homebrew/bin/yabai --stop-service
cmd + ctrl + alt - r: /opt/homebrew/bin/yabai --start-service

alt - b: $HOME/.config//opt/homebrew/bin/yabai/toggle-bar.sh

# cmd + ctrl + i: emacsclient --eval "(emacs-everywhere)"



# Magic :)
alt + ctrl + shift - m: python3 $HOME/.config//opt/homebrew/bin/yabai/order-windows.py

cmd + shift - w: open -a Marta;
                 # /opt/homebrew/bin/yabai -m window --toggle float;\
                 # /opt/homebrew/bin/yabai -m window --grid 4:4:1:1:2:2