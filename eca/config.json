{
  "providers": {
    "z-ai": {
      "api": "anthropic",
      "url": "https://api.z.ai/api/anthropic",
      "models": {
        "GLM-4.6": {}
      },
      "key": "30781b3da8e6457e9006abd32b386b5e.BGq0klizgyLUoNuN"
    }
  },
  "completion": {
    "model": "anthropic/claude-haiku-4-5-20251001",
    "systemPromptFile": "/Users/darkawower/.config/eca/agents/completion.md"
  },
  "behavior": {
    "code-reviewer": {
      "systemPromptFile": "/Users/darkawower/.config/eca/agents/code-reviewer.md",
      "toolCall": {
        "byDefault": "ask",
        "approval": {
          "allow": {
            "eca_shell_command": {
              "argsMatchers": {
                "command": [
                  ".*find.*",
                  ".*pwd.*",
                  ".*ls.*",
                  ".*cd.*",
                  ".*cd.*",
                  ".*gh.*",
                  ".*cat.*",
                  ".*grep.*",
                  ".*git status.*",
                  ".*git diff.*",
                  ".*git log.*",
                  ".*cat.*"
                ]
              }
            },
            "context7": {},
            "sequential-thinking": {},
            "issue_details": {},
            "issue_comments": {},
            "find": {},
            "eca_directory_tree": {},
            "eca_read_file": {},
            "eca_grep": {},
            "eca_editor_diagnostics": {},
            "search_codebase": {}
          }
        }
      }
    }
  },
  "rules": [{ "path": "/Users/darkawower/.config/eca/rules/common-rules.md" }],
  "hooks": {
    "notify-me": {
      "type": "postRequest",
      "actions": [
        {
          "type": "shell",
          "shell": "terminal-notifier -title \"Eca\" -message \"Hey, prompt finished!\""
        }
      ]
    },
    "notify-approval": {
      "type": "preToolCall",
      "matcher": ".*eca_edit_file",
      "visible": false,
      "actions": [
        {
          "type": "shell",
          "shell": "terminal-notifier -title \"ECA Approval Required\" -message \"Tool approval requested: $(jq -r '.\"tool-name\" // \"Unknown tool\"' <<< \"$1\")\" || osascript -e 'display notification \"Tool approval requested: '$(jq -r '.\"tool-name\" // \"Unknown tool\"' <<< \"$1\")'\" with title \"ECA Approval Required\"'"
        }
      ]
    }
  },
  "mcpServers": {
    "sequential-thinking": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-sequential-thinking"]
    },
    "context7": {
      "command": "npx",
      "args": ["-y", "@upstash/context7-mcp@latest"]
    },
    "deepcontext": {
      "command": "npx",
      "args": ["-y", "@wildcard-ai/deepcontext@latest"]
    },
    "serena": {
      "command": "uvx",
      "args": [
        "--from",
        "git+https://github.com/oraios/serena",
        "serena",
        "start-mcp-server",
        "--enable-web-dashboard",
        "False"
      ]
    },
    "qwen": {
      "command": "npx",
      "args": ["-y", "jeffery9/qwen-mcp-tool"]
    },
    // "deepseek": {
    //   "command": "npx",
    //   "args": ["-y", "deepseek-mcp-server"]
    // },
    "gemini-cli": {
      "command": "mcp-gemini-cli"
    },
    "sentry": {
      "disabled": true,
      "command": "npx",
      "args": ["-y", "mcp-remote@latest", "https://mcp.sentry.dev/mcp"]
    },
    "playwright": {
      "command": "npx",
      "args": ["@playwright/mcp@latest"]
    },
    "youtrack": {
      "command": "npx",
      "args": [
        "mcp-remote",
        "https://verifika.youtrack.cloud/mcp",
        "--header",
        "$YOUTRACK_AUTH_HEADER"
      ]
    },
    "codex": {
      "command": "bunx",
      "args": ["mcp-codex-cli", "--allow-npx"]
    },
    "toon-context": {
      "command": "bun",
      "args": [
        "/Users/darkawower/apps/TOON-context-mcp-server/toon-context-mcp/build/index.js"
      ],
      "env": {
        "TOON_THRESHOLD": "0.7",
        "AUTO_CONVERT": "true"
      }
    },
    "emacs-mcp": {
      "command": "bunx",
      "args": ["@keegancsmith/emacs-mcp-server", "--allow-npx"]
    }
    // "ddg-search": {
    //   "command": "uvx",
    //   "args": ["duckduckgo-mcp-server"]
    // }
  },
  "toolCall": {
    "approval": {
