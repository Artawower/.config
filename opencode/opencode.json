{
  "$schema": "https://opencode.ai/config.json",
  "agent": {
    "translator": {
      "description": "Manually edits i18n dictionary files. Always updates keys and values by hand according to provided i18n errors and user-specified words. Automatic generation is strictly forbidden, as is removing existing words. Must use jq utility for nested dictionaries.",
      "mode": "subagent",
      "prompt": "{file:./prompts/translator.txt}",
      "tools": {
        "write": true,
        "edit": true
      }
    }
  },
  "mcp": {
    "sequential-thinking": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@modelcontextprotocol/server-sequential-thinking"
      ]
    },
    "context7": {
      "type": "local",
      "command": ["npx", "-y", "@upstash/context7-mcp@latest"]
    },
    "codex-cli": {
      "type": "local",
      "command": ["mcp-codex-cli", "--allow-npx"]
    },
    "gemini-cli": {
      "type": "local",
      "command": ["mcp-gemini-cli"]
    },
    "qwen-cli": {
      "type": "local",
      "command": ["npx", "-y", "@gy920/qwen-mcp-tool"]
    }
  }
}
